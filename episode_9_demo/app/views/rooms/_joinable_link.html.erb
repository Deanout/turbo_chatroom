<% if current_user.has_joined_room(room) %>
  <%= link_to leave_room_path(room), method: :delete do %>
    <i class="bi bi-dash-square room-leave-link-icon"></i>
  <% end %>
<% else %>
  <%= link_to join_room_path(room), method: :post do %>
    <i class="bi bi-plus-square room-join-link-icon"></i>
  <% end %>
<% end %>
