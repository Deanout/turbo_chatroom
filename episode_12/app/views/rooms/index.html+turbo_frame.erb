<%= turbo_frame_tag "page_handler" do %>
  <%= turbo_stream_action_tag(
    "prepend",
    target: "messages-container",
    template: %(#{render @messages})
    ) %>
  <%= turbo_stream_action_tag(
    "replace",
    target: "pager",
    template: %(#{render "messages/pager", pagy: @pagy})
    ) %>
<% end %>
